@model ProductManagementApp.Models.Product

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Tags</dt>
        <dd class="col-sm-10">@Model.Tags</dd>
        <dt class="col-sm-2">Categories</dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.ProductCategories.Select(pc => pc.Category.CategoryName))
        </dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
